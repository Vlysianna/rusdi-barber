# API Configuration
VITE_API_BASE_URL=http://localhost:3000/api/v1

# App Configuration
VITE_APP_NAME=Rusdi Barber Dashboard
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Authentication
VITE_JWT_SECRET=your-super-secret-jwt-key-here
VITE_TOKEN_EXPIRE_TIME=24h
VITE_REFRESH_TOKEN_EXPIRE_TIME=7d

# Upload Configuration
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Pagination
VITE_DEFAULT_PAGE_SIZE=10
VITE_MAX_PAGE_SIZE=100

# UI Configuration
VITE_SIDEBAR_COLLAPSED=false
VITE_THEME=light
VITE_PRIMARY_COLOR=#3b82f6

# Feature Flags
VITE_ENABLE_REAL_TIME=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_EXPORT=true

# External Services (Optional)
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
VITE_PUSHER_APP_KEY=your-pusher-app-key
VITE_PUSHER_CLUSTER=ap1

# Development
VITE_DEBUG=true
VITE_MOCK_API=false
